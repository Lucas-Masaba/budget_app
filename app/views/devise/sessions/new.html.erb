<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <nav class='navbar'>
    <ul class="signup-ul">
      <li>
        <a href="/users/sign_up" class="back-arrow"><i class="fa fa-arrow-left"></i></a>
      </li>
      <li>
        <h2>Login</h2>
      </li>
      <li class="actions">
        <%= f.submit "Login", class: "submit-signup" %>
      </li>
    </ul>
  </nav>
      <p class="notice"><%= notice %><p>
    <p class="alert"><%= alert %><p>
  <div class="form-container">
    <div class="field">
     
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field" %>
    </div>
    <div class="field">
      
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "input-field" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

  </div>
<% end %>
<%= render "devise/shared/links" %>
